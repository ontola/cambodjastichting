---
type Props = {
  gap?: string;
  center?: boolean;
  class?: string;
};
const { gap, center = false, class: className, ...rest } = Astro.props;
---

<div class={className} {...rest}>
  <slot />
</div>

<style define:vars={{ gap, center }}>
  div {
    display: flex;
    flex-direction: column;
    gap: var(--gap, var(--t-spacing-3));
    justify-content: var(--center, 'flex-start');
  }
</style>
